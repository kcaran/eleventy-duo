<ul class="post-list">
  {% for post in postslist | reverse %}
    <li class="post-list__item">
      <h2 class="post-list__title">
        <a  href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <div class="post-list__details">
        <div class="post-list__meta">
          <time datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
          <span> | </span>
          <span>{{ post | timeToRead }} read</span>
        </div>

        <div class="post-list__tags">
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}">#{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
        </div>
      </div>

      <article class="post-list__excerpt">
        {% if post.data.excerpt %}
          {{ post.data.excerpt | md | safe }}
        {% else %}
          {{ post.page.excerpt | md | safe }}
        {% endif %}
      </article>

      <a class="post-list__read-more" href="{{ post.url }}">read article</a>
    </li>
  {% endfor %}
</ul>
